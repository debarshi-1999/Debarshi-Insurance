@model IEnumerable<DataLayer.Models.PolicyDetail>

@{
    ViewData["Title"] = "ViewPolicyForOneAsset";
    Layout = "_LayoutBuyer";
}
<html>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <div class="mx-auto" style="width: 1400px; margin-top: 50px; border-radius:30px;">
        <div class="card text-center">
            <h3 class="card-title" style="background-color: rgb(7, 43, 68); color:rgb(251, 251, 255)">Policies</h3>
            <div class="card-body" style="background-color: azure;">
                <table class="table table-hover">
                    <thead class="bg-light">
                        <tr style="text-align:center; background-color: rgb(101, 167, 202);">
                            <th>
                                @Html.DisplayNameFor(model => model.Duration)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Premium)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LumpSum)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PremiumInterval)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaturityAmount)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="margin-bottom:1em;">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Premium)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LumpSum)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PremiumInterval)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaturityAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Feedback)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Asset.AssetName)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>
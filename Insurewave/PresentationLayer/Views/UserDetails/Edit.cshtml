@model DataLayer.Models.UserDetail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="Password" class="control-label" hidden></label>
                <input asp-for="Password" class="form-control" hidden/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" readonly/>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" readonly/>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseId" class="control-label"></label>
                <input asp-for="LicenseId" class="form-control" readonly/>
                <span asp-validation-for="LicenseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @{

        if (Model.Role == "broker")
        {
            <a class="btn btn-outline-success ass" asp-action="Index" asp-controller="Broker">Back to List</a>
        }

        if (Model.Role == "insurer")
        {
            <a class="btn btn-outline-success ass" asp-action="Index" asp-controller="Insurer">Back to List</a>
        }
        if (Model.Role == "buyer")
        {
            <a class="btn btn-outline-success ass" asp-action="Index" asp-controller="Buyer">Back to List</a>
        }
    }
</div>


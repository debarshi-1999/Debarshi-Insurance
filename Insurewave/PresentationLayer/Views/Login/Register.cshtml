                                    <div class="form-outline">
                                        <label asp-for="UserId" class="form-label">User Id</label>
                                        <input asp-for="UserId" type="email" class="form-control form-control-lg" required />
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <input asp-for="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control form-control-lg" required />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">

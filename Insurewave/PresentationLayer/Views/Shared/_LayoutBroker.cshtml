<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <style>
        body {
            background-image: linear-gradient(to right,#cfe3ed, #96c4db);
        }

        header {
            background-color: white;
        }

        footer {
            background-color: white;
        }

        li {
            padding-left: 15px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar bg-dark navbar-dark navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow  ">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="/css/Insurewave.png" alt="" width="80" height="60" class="d-inline-block align-text-top">
                </a>
                <a class="navbar-brand " asp-controller="Home" asp-action="Index" style="font-size:x-large"><b > Insurewave</b> </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Broker" asp-action="Index"><strong>Home</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Broker" asp-action="CurrentRequests"><strong>Requests</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-action="GetAllPolicies"><strong>Policies</strong></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link"><strong>Welcome @Context.Session.GetString("FirstName")</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Broker" asp-action="GetDetails">
                                <i class="fa fa-user-circle fa-2x" aria-hidden="true" style="color:steelblue"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a onclick="preventBack()" class="nav-link " asp-controller="Login" asp-action="LogOut">
                                <i class="fa fa-power-off fa-2x" aria-hidden="true" style="color:red"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--<script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
